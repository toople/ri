<footer class="site-footer">
	<div class="footer-top">
		<div class="inner-wide">
			<div class="offsite-links">
				{{#if @blog.twitter}}
				<a href="{{twitter_url}}" target="_blank"><i class="icon-twitter" aria-hidden="true"></i><span class="screen-reader-text">Twitter</span></a>
				{{/if}}
				{{#if @blog.facebook}}
				<a href="{{facebook_url}}" target="_blank"><i class="icon-facebook" aria-hidden="true"></i><span class="screen-reader-text">Facebook</span></a>
				{{/if}}
				<a href="https://plus.google.com/{{! Add Google+ handle }}" target="_blank"><i class="icon-google" aria-hidden="true"></i><span class="screen-reader-text">Google+</span></a>
				<a href="https://www.linkedin.com/in/{{! Add Linkedin handle }}" target="_blank"><i class="icon-linkedin" aria-hidden="true"></i><span class="screen-reader-text">Linkedin</span></a>
				<a href="https://github.com/{{! Add GitHub handle }}" target="_blank"><i class="icon-github" aria-hidden="true"></i><span class="screen-reader-text">GitHub</span></a>
				<a href="https://codepen.io/{{! Add CodePen handle }}" target="_blank"><i class="icon-codepen" aria-hidden="true"></i><span class="screen-reader-text">CodePen</span></a>
				<a href="https://dribbble.com/{{! Add Dribbble handle }}" target="_blank"><i class="icon-dribbble" aria-hidden="true"></i><span class="screen-reader-text">Dribbble</span></a>
				<a href="https://www.behance.net/{{! Add Behance handle }}" target="_blank"><i class="icon-behance" aria-hidden="true"></i><span class="screen-reader-text">Behance</span></a>
				<a href="https://medium.com/{{! Add Medium handle }}" target="_blank"><i class="icon-medium" aria-hidden="true"></i><span class="screen-reader-text">Medium</span></a>
				<a href="https://www.instagram.com/{{! Add Instagram handle }}" target="_blank"><i class="icon-instagram" aria-hidden="true"></i><span class="screen-reader-text">Instagram</span></a>
				<a href="https://www.pinterest.com/{{! Add Pinterest handle }}" target="_blank"><i class="icon-pinterest" aria-hidden="true"></i><span class="screen-reader-text">Pinterest</span></a>
				<a href="https://www.vimeo.com/{{! Add Vimeo handle }}" target="_blank"><i class="icon-vimeo" aria-hidden="true"></i><span class="screen-reader-text">Vimeo</span></a>
				<a href="https://www.youtube.com/user/{{! Add YouTube handle }}" target="_blank"><i class="icon-youtube" aria-hidden="true"></i><span class="screen-reader-text">YouTube</span></a>
				<a href="{{@blog.url}}/rss/" target="_blank"><i class="icon-feed" aria-hidden="true"></i><span class="screen-reader-text">RSS</span></a>
			</div><!-- .offsite-links -->
			<a href="#page" class="top-link square"><i class="icon-chevron-up" aria-hidden="true"></i><span class="screen-reader-text">Back to the top</span></a>
		</div><!-- .inner -->
	</div><!-- .footer-top -->
	<div class="site-info inner-wide">
		<p><a href="{{@blog.url}}">{{@blog.title}}</a> &copy; {{date format="YYYY"}} <br />Curious theme by <a target="_blank" href="https://justgoodthemes.com/">JustGoodThemes</a></p>
	</div><!-- .site-info -->
</footer><!-- .site-footer -->
